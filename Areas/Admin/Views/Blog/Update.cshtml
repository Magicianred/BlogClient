@model BlogUpdateModel

<form method="Post" asp-action="Update" class="p-3" enctype="multipart/form-data">
    
    
    <input class="form-control" asp-for="@Model.Id" type="hidden">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <span asp-validation-for="@Model.Title"></span>
        <input class="form-control" asp-for="@Model.Title">
    </div>
    <div class="form-group">
        <label asp-for="@Model.ShortDesc"></label>
        <span asp-validation-for="@Model.ShortDesc"></span>
        <textarea class="form-control" asp-for="@Model.ShortDesc"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <span asp-validation-for="@Model.Description"></span>
        <textarea class="form-control" asp-for="@Model.Description"></textarea>
    </div>
    
    
    @* <div class="form-group">
        <label>Resim Seçiniz</label>
        <input class="form-control-file" type="file" asp-for="@Model.Image">
    </div> *@

     <div class="form-group">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Şu an ki resminiz:</h5>
                    <getblogimage id="@Model.Id" blog-image-type="@BlogImageType.BlogEdit"></getblogimage>
                </div>

            </div>

            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important;">
                    <h5 class="text-center">Seçtiğiniz resim:</h5>
                    <img id="resimOnizleme" src="" class="w-100" style="height:10rem!important;" />
                </div>

            </div>
            <div class="col-md-2">

            </div>

        <div class="form-group">
            <label>Resim Seçiniz</label>
            <input id="Resim" class="form-control-file" type="file" asp-for="@Model.Image">
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" asp-action="Update" class="btn btn-sm btn-info">Kaydet</button>
    </div>
</form>

@section Css{
    <link rel="stylesheet" href="~/lib/Trumbowyg/dist/ui/trumbowyg.css">
}

@section JavaScript{
    <script>
        $(document).ready(function () {
            $("#Resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]))
            });
        });
    </script>

    <script src="~/lib/Trumbowyg/dist/trumbowyg.min.js"></script>
    <script>
        $("#Description").trumbowyg()
    </script>
}